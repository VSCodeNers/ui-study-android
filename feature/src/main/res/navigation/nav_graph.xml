<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vscodeners.ui_study_android.feature.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_navigate_fragment_to_login"
            app:destination="@+id/loginFragment"/>

        <action
            android:id="@+id/action_navigate_fragment_to_screen_shot"
            app:destination="@+id/screenShotFragment"/>

        <action
            android:id="@+id/action_navigate_fragment_to_progress_bar"
            app:destination="@+id/progressBarFragment"/>

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.vscodeners.ui_study_android.feature.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

    </fragment>

    <fragment
        android:id="@+id/screenShotFragment"
        android:name="com.vscodeners.ui_study_android.feature.ScreenShotFragment"
        android:label="fragment_screen_shot"
        tools:layout="@layout/fragment_screen_shot">

    </fragment>

    <fragment
        android:id="@+id/progressBarFragment"
        android:name="com.vscodeners.ui_study_android.feature.ProgressBarFragment"
        android:label="fragment_progress_bar"
        tools:layout="@layout/fragment_progress_bar">

    </fragment>

</navigation>